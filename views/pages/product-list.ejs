<div class="row">
    <div class="col-md-3">
        <!-- Filters Sidebar -->
        <div class="card">
            <div class="card-header">
                <h5>Filters</h5>
            </div>
            <div class="card-body">
                <form method="GET" action="/products">
                    <div class="mb-3">
                        <label class="form-label">Category</label>
                        <select name="category" class="form-select">
                            <option value="">All Categories</option>
                            <% categories.forEach(cat => { %>
                                <option value="<%= cat._id %>" 
                                        <%= category == cat._id ? 'selected' : '' %>>
                                    <%= cat.name %>
                                </option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Price Range</label>
                        <input type="range" class="form-range" min="0" max="1000" name="maxPrice">
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Apply Filters</button>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-9">
        <!-- Products Grid -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4>Products</h4>
            <div>
                <select class="form-select" onchange="window.location.href=this.value">
                    <option value="/products?sort=name">Sort by Name</option>
                    <option value="/products?sort=price">Sort by Price</option>
                    <option value="/products?sort=newest">Newest First</option>
                </select>
            </div>
        </div>
        
        <div class="row">
            <% products.forEach(product => { %>
                <%- include('../partials/product-card', {product: product}) %>
            <% }) %>
        </div>
        
        <!-- Pagination -->
        <% if (totalPages > 1) { %>
            <nav class="mt-4">
                <ul class="pagination justify-content-center">
                    <% for (let i = 1; i <= totalPages; i++) { %>
                        <li class="page-item <%= currentPage == i ? 'active' : '' %>">
                            <a class="page-link" href="/products?page=<%= i %>"><%= i %></a>
                        </li>
                    <% } %>
                </ul>
            </nav>
        <% } %>
    </div>
</div>